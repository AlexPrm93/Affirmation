mainSize = 1920;
mobileSize = 480;

pixelToOtherUnit(pixelValue, sizeUnit) {
  value = (100 * pixelValue) / mainSize;
  return unit(value, sizeUnit)
}

mobileScaling(pixelValue, sizeUnit) {
  value = (100 * pixelValue) / mobileSize;
  return unit(value, sizeUnit)
}

body, html, main, aside, nav, header, footer, article, section, figure, div, h1, h2, h3, h4, h5, hgroup, svg, img, label, input, form, button, span, p, strong, ul, li, ol, i {
  font-family: 'Avenir Next Cyr';
  font-weight: normal;
  box-sizing:border-box;
	margin: 0;
	padding: 0;
	appearance: none;
	-webkit-appearance: none;
	-moz-appearance: none;
	color: #000;
	font-weight: normal;
	list-style: none;
	text-decoration: none;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  -webkit-text-size-adjust: none;
  border:0;
  outline:0;
}
body {
  display: flex;
  flex-direction: column;
}
h1 {
  font-family: 'Avenir Next Cyr';
  font-size: pixelToOtherUnit(59, vw);
  font-weight: bold;
}
h2 {
  font-family: 'Avenir Next Cyr';
  font-size: pixelToOtherUnit(40, vw);
  font-weight: bold;
}
p {
  font-size: pixelToOtherUnit(20, vw);
}
.subtitle {
  font-size: pixelToOtherUnit(26, vw);
}
.wrapper {
	flex-grow: 1;
}
.container {
  margin-right: auto;
  margin-left: auto;
  padding-right: 15px;
  padding-left: 15px;
  max-width: pixelToOtherUnit(1200, vw);
}
.row {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -15px;
}
.align {
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn {
  cursor: pointer;
  position: relative;
  display: inline-block;
  border-bottom: 2px solid #000;
  border-radius: pixelToOtherUnit(50, vw);
  font-size: pixelToOtherUnit(18, vw);
  color: #fff;
  background-image: -moz-linear-gradient( 90deg, #1e1e1e 0%, #4d4d4d 100%);
  background-image: -webkit-linear-gradient( 90deg, #1e1e1e 0%, #4d4d4d 100%);
  background-image: -ms-linear-gradient( 90deg, #1e1e1e 0%, #4d4d4d 100%);
  box-shadow: 0px 2px 0px 0px rgba(0, 0, 0, 0.004);
  transition: all 0.5s ease;
  &::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 20%;
    transform: translateY(-50%);
  }
  &.app-store {
    padding-top: pixelToOtherUnit(37, vw);
    padding-bottom: pixelToOtherUnit(37, vw);
    padding-left: pixelToOtherUnit(93, vw);
    padding-right: pixelToOtherUnit(38, vw);
    &::before {
      left: 9%;
      width: pixelToOtherUnit(50, vw);
      height: pixelToOtherUnit(50, vw);
      background-image: url(../img/svg/apple.svg);
      background-repeat: no-repeat;
      background-size: cover;
    }
  }
  &.google-play {
    padding-top: pixelToOtherUnit(37, vw);
    padding-bottom: pixelToOtherUnit(37, vw);
    padding-left: pixelToOtherUnit(80, vw);
    padding-right: pixelToOtherUnit(35, vw);
    &::before {
      left: 9%;
      width: pixelToOtherUnit(42, vw);
      height: pixelToOtherUnit(42, vw);
      background-image: url(../img/svg/google-play.svg);
      background-repeat: no-repeat;
      background-size: cover;
    }
  }
  &:hover {
    background-image: -moz-linear-gradient( 90deg, #4d4d4d 0%, #1e1e1e 100%);
    background-image: -webkit-linear-gradient( 90deg, #4d4d4d 0%, #1e1e1e 100%);
    background-image: -ms-linear-gradient( 90deg, #4d4d4d 0%, #1e1e1e 100%);
    transition: all 0.5s ease;
  }
}
.btn-default {
  cursor: pointer;
  padding-top: pixelToOtherUnit(23, vw);
  padding-bottom: pixelToOtherUnit(23, vw);
  padding-left: pixelToOtherUnit(25, vw);
  padding-right: pixelToOtherUnit(25, vw);
  border-bottom: 2px solid #217bc4;
  border-radius: pixelToOtherUnit(50, vw);
  font-size: pixelToOtherUnit(18, vw);
  color: #000;
  background-image: -moz-linear-gradient( 90deg, #00b7ff 0%, #00ecff 100%);
  background-image: -webkit-linear-gradient( 90deg, #00b7ff 0%, #00ecff 100%);
  background-image: -ms-linear-gradient( 90deg, #00b7ff 0%, #00ecff 100%);
  box-shadow: 0px 2px 0px 0px rgba(33, 123, 196, 0.004);
  transition: all 0.5s ease;
  &:hover {
    background-image: -moz-linear-gradient( 90deg, #00edff 0%, #00b7ff 100%);
    background-image: -webkit-linear-gradient( 90deg, #00edff 0%, #00b7ff 100%);
    background-image: -ms-linear-gradient( 90deg, #00edff 0%, #00b7ff 100%);
  }
}
